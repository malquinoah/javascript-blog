<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Noah's blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <!-- Header -->
    <%- include('partials/header.ejs') %>
    

    <!-- Blog top -->
     <div class="container">
            <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
                <div class="col-lg-12 px-0">
                    <h1 class="display-4 fst-italic">Welcome to Noah's Blog House</h1>
                    <p class="lead my-3">This is where I post my thoughts</p>
            </div>
        </div>
        
        <% posts.forEach(post => { %>
            <div class="row mb-2">
                <div class="col-md-12">
                    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                        <div class="col p-4 d-flex flex-column position-static">
                            <strong class="d-inline-block mb-2 text-primary-emphasis">Post by: <%= post.lName %>, <%= post.fName %></strong>
                            <h2 class="mb-0"><%= post.title %></h2>
                            <div class="mb-1 text-body-secondary"><%= post.subheading %></div>
                            <p class="card-text mb-auto"><%= post.textbody %></p>
                            <div class="d-flex gap-2"> 
                                <!-- Flex container with gap between buttons --> 
                                 <a href="/edit/<%= post.id %>" class="btn btn-outline-primary btn-custom">Edit Post</a> 
                                 <form action="/delete/<%= post.id %>?_method=DELETE" method="POST" style="display:inline;"> <button type="submit" class="btn btn-outline-danger btn-custom">Delete Post</button> </form> 
                                </div>

                        </div>
                        <% if (post.imgURL) { %>
                        <div class="col-auto d-none d-lg-block">
                            <img id="thumbnailImage" class="bd-placeholder-img" width="200" height="250" src="<%= post.imgURL %>" alt="Thumbnail">
                        </div> <% } %>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <!-- footer -->
     <footer class="footer"><%- include('partials/footer.ejs') %></footer>
    
    
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>